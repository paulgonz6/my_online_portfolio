.jumbotron {
  width: 100%;
  height: 50vh;
  background-size: cover;
  background-image: url(<%= asset_path('street.jpg') %>);
  border-bottom: 5px solid $brand-primary;
  margin-bottom: 0px !important;
}


.jumbotron-subtext {
  color: white;
}

.nav-row {
  background-color: #f7f7f7;
}

.desktop-nav-bar {
  width: 50%;
  display: inline-block;
  margin: 0 auto;

  li {
    width: 24.5%;
    padding: 25px 0;
    border-right: 1px solid lighten($gray-base, 40%);
  }

  li:first-child {
    border-left: 1px solid lighten($gray-base, 40%);
  }

  li:hover, .active {
    margin-bottom: -3px;
    border-bottom: 3px solid $brand-primary;
    cursor: pointer;
  }

}


.active-nav {
  border-bottom: 3px solid lighten($brand-primary, 50%);
}

.blockquote-footer {
  background-color: $brand-primary;
  padding: 25px 0;
  margin-top: 50px;

  h4 {
    color: white;
  }
}

.social-icon {
  color: $text-color;
  background: #f7f7f7;
  width: 50px;
  padding: 17px 0;
  text-align: center;
  border-radius: 50%;
  margin: 3px 6px 3px 0;
}

.social-hover:hover {
  color: $brand-primary !important;
  text-decoration: none !important;
}


